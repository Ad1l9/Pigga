
@model List<Employee>
@{
    int count = 0;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee Table</h4>
            <a class="btn btn-primary" asp-action="Create">Create Employee</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Photo</th>
                            <th>FullName</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee employee in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img style="width:300px;height:300px" src="~/assets/imgs/@employee.ImageUrl">
                                </td>
                                <td>@employee.Name @employee.Surname</td>
                                <td>
                                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@employee.Id">Update</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@employee.Id">Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>